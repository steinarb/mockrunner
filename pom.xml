        <module>mockrunner-ejb</module>
        <module>mockrunner-jdbc</module>
        <module>mockrunner-jca</module>
        <module>mockrunner-servlet</module>
        <module>mockrunner-tag</module>
        <module>mockrunner-struts</module>
