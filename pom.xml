            </dependency>
            <dependency>
                <groupId>com.kirkk</groupId>
                <artifactId>jaranalyzer</artifactId>
                <version>1.2</version>
            </dependency>
            <dependency>
                <groupId>org.apache.struts</groupId>
                <artifactId>struts-extras</artifactId>
                <version>1.3.10</version>
